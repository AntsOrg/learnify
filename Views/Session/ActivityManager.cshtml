@{
    ViewData["Title"] = "Manage Resources";
}
@model IEnumerable<learnify.Models.Resource>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            <div class="card mb-3" style="max-width: 720px;">
                <div class="row g-0">

                    <div class="col-md-8 ">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                    </div>
                    <div class="col-md-4 p-4 row align-items-center justify-items-center ">
                        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                            <button type="submit" class="btn btn-danger" asp-controller="Resource" asp-action="Delete">Delete</button>
                            <button type="button" class="btn btn-warning">Edit</button>
                            <button type="button" class="btn btn-success">View</button>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            }
        </div>