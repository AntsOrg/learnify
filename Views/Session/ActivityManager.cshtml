@{
    ViewData["Title"] = "Manage Resources";
}
@model IEnumerable<learnify.Models.Resource>;
@if(TempData["itemDeleted"] != null){
        <div id="alert-dialog" class="alert alert-warning">@TempData["itemDeleted"]</div>
}
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            <div class="card mb-3" style="max-width: 720px;">
                <div class="row g-0">

                    <div class="col-md-8 ">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5> 
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Id</p>
                        </div>
                    </div>
                    <div class="col-md-4 p-4 row align-items-center justify-items-center ">
                        <div class="btn-group gap-2" role="group" aria-label="Basic mixed styles example">
                            <form id="delte-form-@item.Id" method="post" asp-controller="Resource" asp-action="Delete">
                                <input type="hidden" asp-for="@item.Id" />
                                <button type="submit" asp-controller="Resource" asp-route-itemid="@item.Id" asp-action="Delete"  class="btn btn-danger">Delete</button> 
                            </form>

                            <form id="edit-form-@item.Id" method="post" asp-controller="Resource" asp-action="Edit">
                                <input type="hidden" asp-for="@item.Id" />
                                <button type="submit" asp-controller="Resource" asp-route-itemid="@item.Id" asp-action="Edit" class="btn btn-warning">Edit</button> 
                            </form>
                            <a href="@item.Link" target="_blank">
                            <button type="button" class="btn btn-success">View</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>